<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<bean id="userService" class="com.epam.spring.club.services.UserService">
		<property name="users" value="#{dao.getUsers()}"></property>
	</bean>

	<bean id="eventService" class="com.epam.spring.club.services.EventService">
		<property name="events" value="#{dao.getEvents()}"></property>
	</bean>

	<bean id="discountService" class="com.epam.spring.club.services.DiscountService">
		<property name="discountStrategiesList">
			<list>
				<bean class="com.epam.spring.club.strategies.BirthdayStrategie" />
				<bean class="com.epam.spring.club.strategies.TenthTicketStrategi" />
			</list>
		</property>
	</bean>

	<bean id="auditoriumService" class="com.epam.spring.club.services.AuditoriumService" />

	<bean id="bookingService" class="com.epam.spring.club.services.BookingService">
		<property name="discountService" ref="discountService"></property>
		<property name="eventService" ref="eventService"></property>
	</bean>

</beans>